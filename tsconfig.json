{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,
    "noImplicitAny": false,
    "noLib": false,
    "target": "es6",
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@lib": [
        "./lib/index"
      ],
      "@lib/*": [
        "./lib/*"
      ]
    }
  }
}
