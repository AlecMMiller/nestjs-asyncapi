{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@core/(.*)": "<rootDir>/src/core/$1",
    "@dtos/(.*)": "<rootDir>/src/dtos/$1",
    "@entities/(.*)": "<rootDir>/src/db/entities/$1",
    "@modules/(.*)": "<rootDir>/src/modules/$1",
    "@db/(.*)": "<rootDir>/src/db/$1",
    "@shared/(.*)": "<rootDir>/src/shared/$1",
    "@src/(.*)": "<rootDir>/src/$1",
    "@tests/(.*)": "<rootDir>/tests/$1"
  }
}
